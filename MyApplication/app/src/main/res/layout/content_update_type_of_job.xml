<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update_type_of_job"
    tools:context="com.example.sergioarispejulio.proyectogrado.update_type_of_job"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView6"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Seleccione los trabajos que realiza"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:columnCount="1">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageView2"
                        android:src="@mipmap/albanil"
                        android:layout_gravity="center" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch1"
                        android:checked="false"
                        android:onClick="actualizar__perfil_albanil"
                        android:layout_gravity="center" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageView4"
                        android:src="@mipmap/plomero"
                        android:layout_gravity="center" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch2"
                        android:checked="false"
                        android:onClick="actualizar__perfil_plomero"
                        android:layout_gravity="center" />

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageView3"
                        android:src="@mipmap/jardinero"
                        android:layout_gravity="center" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch3"
                        android:checked="false"
                        android:onClick="actualizar__perfil_jardinero"
                        android:layout_gravity="center" />

                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
